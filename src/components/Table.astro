          </div>
          <!-- AWAY -->
          <div class="flex gap-4 px-2">
            <div>logo</div>
            <div>team</div>
            <div>form</div>
          </div>
        </div>
        <!-- WINNER & RECORD COLUMN -->
        <div class="flex w-20 flex-col px-2 text-center">
          <div>winner</div>
          <div>record</div>
        </div>
