  <!-- CARD -->
  <div class="flex flex-col divide-y rounded-3xl border p-2">
    <!-- LEAGUE TABLE -->
    <div>
      <!-- LEAGUE ROW -->
      <div class="flex items-center pb-2 pt-1">
        <!-- FLAG / LOGO COLUMN -->
        <div class="w-20 text-center">flag / logo</div>
